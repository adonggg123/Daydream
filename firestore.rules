rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile, admins/staff can read all users
      allow read: if isOwner(userId) || 
                  (isAuthenticated() && 
                   exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff']);
      // Users can create/update their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) || 
                     (isAuthenticated() && 
                      exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff']);
      // Only admins can delete users
      allow delete: if isAuthenticated() && 
                     exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Allow admins/staff to list all users (for queries)
    match /users/{document=**} {
      allow list: if isAuthenticated() && 
                    exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff'];
    }
    
    // Rooms collection
    match /rooms/{roomId} {
      // Everyone can read available rooms
      allow read: if true;
      // Only admins/staff can write
      allow write: if isAuthenticated() && 
                    exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff'];
    }
    
    // Cottages collection
    match /cottages/{cottageId} {
      // Everyone can read available cottages
      allow read: if true;
      // Only admins/staff can write
      allow write: if isAuthenticated() && 
                    exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff'];
    }
    
    // Allow everyone to list cottages (for queries)
    match /cottages/{document=**} {
      allow list: if true;
    }
    
    // Bookings collection
    match /bookings/{bookingId} {
      // Users can read their own bookings, admins/staff can read all
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff', 'receptionist'])
      );
      // Users can create their own bookings
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Users can update their own bookings, admins/staff can update any
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff', 'receptionist'])
      );
      // Users can delete their own bookings, admins/staff can delete any
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff', 'receptionist'])
      );
    }
    
    // Event bookings collection
    match /event_bookings/{bookingId} {
      // All authenticated users can read event bookings (needed for availability checks)
      // Users can read their own bookings, admins/staff can read all
      allow read: if isAuthenticated();
      // Users can create their own bookings
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Users can update their own bookings, admins/staff can update any
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff', 'receptionist'])
      );
      // Users can delete their own bookings, admins/staff can delete any
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff', 'receptionist'])
      );
    }
    
    // Allow authenticated users to list event bookings (for queries with orderBy)
    match /event_bookings/{document=**} {
      allow list: if isAuthenticated();
    }
    
    // Cottage bookings collection
    match /cottage_bookings/{bookingId} {
      // Users can read their own bookings, admins/staff can read all
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff', 'receptionist'])
      );
      // Users can create their own bookings
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Users can update their own bookings, admins/staff can update any
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff', 'receptionist'])
      );
      // Users can delete their own bookings, admins/staff can delete any
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff', 'receptionist'])
      );
    }
    
    // Guest requests collection
    match /guest_requests/{requestId} {
      // Users can read their own requests, admins/staff/receptionist can read all
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff', 'receptionist'])
      );
      // Users can create their own requests
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Only admins/staff/receptionist can update
      allow update: if isAuthenticated() && 
                     exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff', 'receptionist'];
      // Only admins can delete
      allow delete: if isAuthenticated() && 
                     exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Posts collection (social feed)
    match /posts/{postId} {
      // Everyone can read posts
      allow read: if true;
      // Authenticated users can create posts
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Users can update/delete their own posts, admins can update/delete any
      allow update, delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );
    }
    
    // Admin notifications collection
    match /admin_notifications/{notificationId} {
      // Only admins/staff can read
      allow read: if isAuthenticated() && 
                   exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff'];
      // Any authenticated user can create admin notifications (e.g., when booking events/rooms)
      allow create: if isAuthenticated();
      // Only admins can update/delete
      allow update, delete: if isAuthenticated() && 
                             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // User notifications collection
    match /user_notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Admins/staff/receptionist can create notifications
      allow create: if isAuthenticated() && 
                     exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff', 'receptionist'];
      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Only admins can delete
      allow delete: if isAuthenticated() && 
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Audit logs collection (note: collection name is audit_logs, not audit_trail)
    match /audit_logs/{logId} {
      // Only admins can read audit logs
      allow read: if isAuthenticated() && 
                   exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Any authenticated user can create audit logs for their own actions
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // No updates or deletes allowed
      allow update, delete: if false;
    }
    
    // Allow admins to list all audit logs (for queries)
    match /audit_logs/{document=**} {
      allow list: if isAuthenticated() && 
                    exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
